<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.secureexam.desktop.AdminController" styleClass="root">
    <stylesheets>
        <URL value="@../css/styles.css" />
    </stylesheets>

    <!-- Top Header -->
    <top>
        <HBox styleClass="dashboard-header">
            <padding>
                <Insets top="15" right="25" bottom="15" left="25" />
            </padding>
            <Text text="Admin Dashboard" styleClass="app-title" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" styleClass="logout-button" />
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" styleClass="admin-container">
            <padding>
                <Insets top="30" right="40" bottom="40" left="40" />
            </padding>

            <!-- Assign Examiner Section -->
            <VBox spacing="10" styleClass="section">
                <Text text="Assign Examiner Role" styleClass="section-title" />
                <TextField fx:id="teacherEmail" promptText="Teacher Email or Phone" styleClass="text-field" />
                <Button fx:id="assignExaminer" text="Assign Examiner Role" onAction="#handleAssignExaminer" styleClass="primary-button" />
            </VBox>

            <!-- Add Student Section -->
            <VBox spacing="10" styleClass="section">
                <Text text="Add New Student" styleClass="section-title" />
                <GridPane hgap="10" vgap="10" styleClass="form-grid">
                    <Label text="Email" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="field-label" />
                    <TextField fx:id="studentEmail" promptText="Student Email" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="text-field" />
                    <Label text="Registration Number" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="field-label" />
                    <TextField fx:id="studentReg" promptText="Registration Number" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="text-field" />
                    <Label text="Stream" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="field-label" />
                    <TextField fx:id="studentStream" promptText="Stream (e.g., Engineering)" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="text-field" />
                    <Label text="Branch" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="field-label" />
                    <TextField fx:id="studentBranch" promptText="Branch (e.g., CSE)" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="text-field" />
                    <Label text="Course" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="field-label" />
                    <TextField fx:id="studentCourse" promptText="Course (e.g., B.Tech)" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="text-field" />
                    <Label text="Class" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="field-label" />
                    <TextField fx:id="studentClass" promptText="Class (e.g., Semester 4)" GridPane.rowIndex="5" GridPane.columnIndex="1" styleClass="text-field" />
                    <Label text="Section" GridPane.rowIndex="6" GridPane.columnIndex="0" styleClass="field-label" />
                    <TextField fx:id="studentSection" promptText="Section (e.g., A)" GridPane.rowIndex="6" GridPane.columnIndex="1" styleClass="text-field" />
                </GridPane>
                <Button fx:id="addStudent" text="Add Student" onAction="#handleAddStudent" styleClass="primary-button" />
            </VBox>

            <!-- Feedback Label -->
            <Label fx:id="feedbackLabel" text="" styleClass="feedback-label" wrapText="true" />
        </VBox>
    </center>
</BorderPane>